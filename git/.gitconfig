[user]
	name = Filip
	email = filipnajjar@yahoo.com
	signingKey = ""
[credential]
	helper = store
[core]
	editor = nvim
	autocrlf = input
	pager = diff-so-fancy | less --tabs=4 -RFX
[gpg]
	program = gpg
[commit]
	gpgSign = false
[tag]
	forceSignAnnotated = false
[init]
	defaultBranch = main
[alias]
	a = !git add -A && git commit -m
	cg = config --global
  st = stash
  s = switch -
[pull]
	ff = only
[interactive]
	diffFilter = diff-so-fancy --patch

